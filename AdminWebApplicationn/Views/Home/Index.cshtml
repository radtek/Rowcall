@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<br /><br />

<form class="form-inline" asp-controller="Home" asp-action="Index" method="post">
    <div class="form-group">
        <label for="exampleInputName2">Email</label>
        <input type="email" class="form-control" asp-for="Email" placeholder="Email here...">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail2">Password</label>
        <input type="password" class="form-control" asp-for="Password" placeholder="Password here...">
    </div>
    <button type="submit" class="btn btn-default">Add teacher</button>
</form>

<br /><br />

<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Teacher id</th>
                <th>Teacher email</th>
            </tr>
        </thead>
        <tbody>
            @{
                var index = 1; 
                foreach (var v in Model.ApplicationUserList)
                {
                    <tr>
                        <th>@index</th>
                        <th>@v.Id</th>
                        <th>@v.Email</th>
                    </tr>

                    index++; 
                }
            }

        </tbody>
    </table>
</div>