@model WebApplication.Models.HomeViewModels.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <form style="padding-top: 15vh; padding-bottom: 10px;" asp-controller="Home" asp-action="Index">
            <h2 class="text-center">Teacher login</h2>
            <br /><br />
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" asp-for="Email" placeholder="Email">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" asp-for="Password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>

        @{ 
            if (ViewData["Error"] != null)
            {
                <p class="text-danger">
                    @ViewData["Error"]
                </p>
            }
        }

    </div>
</div>
