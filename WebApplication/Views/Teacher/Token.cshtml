@model WebApplication.Models.TeacherViewModels.TokenViewModel
@{
    ViewData["Title"] = "Tokens";
}

<div class="row">
    <div class="col-12">
        <br />
        <form asp-controller="Teacher" asp-action="CreateToken" method="post">
            <div class="input-group mb-3">
                <div class="input-group-append">
                    <input type="hidden" asp-for="ClassId" />
                    <button class="btn btn-danger" onclick="window.history.back();" style="margin-right: 10px;" type="button">Go back!</button>
                    <button type="submit" class="btn btn-outline-secondary">Add Token</button>
                </div>
            </div>
        </form>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Token value</th>
                    <th scope="col">Created date</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var index = 1;
                    foreach (var v in Model.Tokens.ToList())
                    {
                        <tr>
                            <th scope="row">@index</th>
                            <th><a href="/teacher/studenttokens/@v.Id">@v.TokenValue</a></th>
                            <th>@v.CreatedDateTime</th>
                        </tr>
                        index++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>